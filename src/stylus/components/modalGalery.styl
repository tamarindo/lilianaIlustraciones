.modalGalery
  position: fixed;
  z-index: 5;
  top: 0px;
  width: 100% ;
  height: 100%;
  &-fondo
    background-color: black;
    opacity: 0.7;
    width: 100% ;
    height: 100%;
    position: fixed;

  &-container
    width: 80%;
    max-width: 1024px;
    background-color: white
    height: 400px;
    z-index: 6;
    position: relative;
    margin: 0 auto;
    top: 50%;
    margin-top: -200px;
    padding-top: 0px;
    overflow: initial;

  &-close
     width: 25px;
     height: 25px;
     background: #7b31af;
     border-radius: 21px;
     text-align: center;
     position: absolute;
     right: -9px;
     color: white;
     line-height: 26px;
     text-align: center;
     font-size: 14px;
     cursor:pointer;
     top: -11px;
