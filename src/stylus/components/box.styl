.box
  overflow hidden
  padding-top: 2em

  h3
    font-size: 20px
    font-weight: normal
    font-style: italic
    width: 100%
    float: left
    color: #848484
    clear: both
  &-tama√±o
    display:none
  &-tecnicas
    display:none
  @media (max-width: $screen-tablet)
    &-resColTwo
      .Card
        width: 50%;
        float: left;
        padding: 1rem;
    &-resColThree
      .Card
        width: 33%
        margin 0
