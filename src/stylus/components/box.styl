.box
  overflow hidden
  padding-top: 2em

  h3
    font-size: 17px
    font-weight: normal
    font-style: italic
    width: 100%
    float: left
    color: #848484
    clear: both

  @media (max-width: 42em)
    &-resColTwo
      .Card
        width: 50%;
        float: left;
        padding: 1rem;
    &-resColThree
      .Card
        width: 33%
        margin 0
        float: left;
        padding: 1rem;


.Card
  &-text
    text-align: center
    display: block
    width: 100%
    height: 19px;
    overflow: hidden;

  &-img
    width: 100%
  &-picture
    border-radius: 30px


.Card--rowThird
  margin: 0 4%
  margin-bottom: 1rem;
