.Card
  &-text
    position: absolute;
    margin-top: -23px;
    left: 0;
    display: block;
    height: 19px;
    overflow: hidden;
    margin-left: 10px;
    font-size: 11px;
    color: white;
    text-shadow: -1px 1px 1px #2F2F2F;
  &-content
    position: relative
  &-img
    width: 100%
  &-picture
    border-radius: 30px

